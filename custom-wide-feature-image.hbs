{{!< default}}

<main class="gh-main">
    {{#post}}
        <article class="gh-article {{post_class}}">
            <header class="gh-article-header gh-canvas">
                {{#if tags}}
                    <ul class="gh-article-tags-list">
                        {{#foreach tags limit="5"}}
                            <li class="gh-article-tags-item">
                                <a class="gh-article-tag" href="{{url}}" title="{{name}}" data-tag-id="{{id}}">{{name}}</a>
                            </li>
                        {{/foreach}}
                    </ul>
                {{/if}}

                <h1 class="gh-article-title">{{title}}</h1>

                {{> "post-meta"}}

                {{#if @custom.show_article_custom_excerpt}}
                    {{#if custom_excerpt}}
                        <p class="gh-article-excerpt">{{custom_excerpt}}</p>
                    {{/if}}
                {{/if}}

                {{> "feature-image"}}
            </header>

            <section class="gh-content gh-canvas">
                {{content}}
            </section>
        </article>
    {{/post}}

    {{> "related-posts"}}

    {{#post}}
        {{> "comments"}}
    {{/post}}
</main>

{{#contentFor "body_class"}} has-wide-image{{/contentFor}}